<div class="slide">
  <% work.forEach(function(bundle) { %>
    <% if (bundle.version == 'v3') { %>
      <div>
        <script type="application/javascript" src="/dist/<%= bundle.name %>/<%= bundle.version %>.bundle.js"></script>

        <!-- Button trigger modal -->
        <button type="button" id="<%= bundle.name %>_btn" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#updateProject">
          Edit <%= bundle.name %>
        </button>

        <script>
          document.getElementById('<%= bundle.name %>_btn').onclick = () => {
            const appContainer = document.getElementById("update_app_container");
            appContainer.innerHTML = "";
            Window.games["<%= bundle.name %>"](appContainer);
          };
        </script>
      </div>
    <% } %>
  <% }); %>
</div>

<!-- Modals -->
<%- include('partials/createForm') %>
<%- include('partials/updateForm') %>